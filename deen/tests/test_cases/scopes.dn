struct Scope {
  scope: *char,

  fn enter(name: *char) Scope {
    println!("Entered `{}` scope", name);
    return Scope { .scope = name };
  }

  fn drop(&self) {
    println!("Exited `{}` scope", self.scope);
  }
}

fn main() i32 {
  // MAIN SCOPE
  let main_scope = Scope.enter("MAIN");

  {
    // TEMP SCOPE
    let temp_scope = Scope.enter("TEMP");
    println!("message from temp");
  }

  if 1 == 1 {
    // IF SCOPE
    let if_scope = Scope.enter("IF");
    println!("condition is true");
  } else {
    // ELSE SCOPE
    let else_scope = Scope.enter("ELSE");
  }

  return 0;
}
